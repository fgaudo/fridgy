{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": "./",
		"paths": {
			"@/domain/*": [
				"src/domain/*"
			],
			"@/domain": [
				"src/domain/index"
			],
			"@/app/*": [
				"src/app/*"
			],
			"@/app": [
				"src/app/index"
			],
			"@/ui/*": [
				"src/ui/*"
			],
			"@/ui": [
				"src/ui/index"
			],
			"@/data/*": [
				"src/data/*"
			],
			"@/data": [
				"src/data/index"
			],
			"@/core/*": [
				"src/core/*"
			],
			"@/core": [
				"src/core/index"
			]
		}
	},
	"include": [
		"src"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
