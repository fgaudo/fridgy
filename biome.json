{
	"$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
	"assist": {
		"actions": {
			"recommended": true,
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":NODE:",
							":PACKAGE:",
							":BLANK_LINE:",
							"@/core/**",
							":BLANK_LINE:",
							"@/feature/**",
							":BLANK_LINE:",
							":PATH:"
						]
					}
				},
				"recommended": true,
				"useSortedKeys": "on"
			}
		},
		"enabled": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!android"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"linter": {
		"domains": {
			"project": "recommended"
		},
		"enabled": true,
		"rules": {
			"correctness": {
				"noPrivateImports": "error"
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
